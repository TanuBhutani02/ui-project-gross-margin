{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Launch Next.js App",
        "type": "node",
        "request": "launch",
        "runtimeExecutable": "npm",
        "runtimeArgs": ["run", "dev"],
        "port": 9229,
        "cwd": "${workspaceFolder}",
        "envFile": "${workspaceFolder}/.env",
        "console": "integratedTerminal"
      },
      {
        "name": "Attach to Next.js",
        "type": "node",
        "request": "attach",
        "port": 9229,
        "restart": true,
        "protocol": "inspector",
        "skipFiles": ["<node_internals>/**"]
      }
    ]
  }